<IfModule mod_rewrite.c>
	RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d

    RewriteRule \.(?:css|js|jpe?g|gif|png)$ - [L]
    RewriteRule ^api/(.*)$ api_router.php?resource=$1 [QSA,L,END] #en lugar de action ponemos resource por ser una API // al agregar END le decimos que no ejecute la siguiente l√≠nea
</IfModule>